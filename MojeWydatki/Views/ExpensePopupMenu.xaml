<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage  xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MojeWydatki.Views.ExpensePopupMenu">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="Background_tapped"/>
            </Grid.GestureRecognizers>
            <Grid x:Name="body" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
                <Frame CornerRadius="10" Padding="5" Margin="5"  BackgroundColor="AliceBlue">
                    <StackLayout Padding="5">
                        <Button Text="Usuń"  Clicked="RemoveExpense_Clicked" CornerRadius="5"/>

                    </StackLayout>
                </Frame>
            </Grid>
        </Grid>
    </ContentPage.Content>
</pages:PopupPage>